<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
         table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th,
        button {
            font-size: 25px;
            background-color: #4CAF50;
            color: white;
        }
        .btn{
            background-color: #4CAF50;
            color: white;
            font-size: 30px;
           
        }
        ul{
            background-color: #4CAF50;
            max-width: 300px;
            padding-left: 50px;
            font-size: larger;
            font-weight: bold;
        }
        li{
          
            padding-top: 20px;
        }
    </style>
</head>
<body onload="generatellist('<%=id%>')" >
    <h2> List of Data</h2>
    <div id="listdata"></div>
    <button onclick="comments('<%=id%>')">COMMENTS</button>
    <div id="table-container"></div>
</body>
<script>
id = '<%=id%>';
    async function fetchapi(id){
        const response = await fetch('https://jsonplaceholder.typicode.com/posts/'+id);
        var userData = await response.json();
        return userData;
    }

async function generatellist(id) {
    userData = await fetchapi(id);
        let list = '<ul>';  
                for(key in userData){
                    list += '<li>';  
                    list+= key+":"+ userData[key];
                }
             list += '</li></ul>'
             li = document.getElementById('listdata');
             li.innerHTML = list;
}

async function comments(id) {
        const response = await fetch('https://jsonplaceholder.typicode.com/posts/'+id+'/comments');
        const data = await response.json();

        let table = '<table>';
            // print th
            table += '<tr>'
            for(key in data[0]){
                table += `<th> ${key} </th>`;
            }
            table += '</tr>'

            //print td
            for(dt of data){
                table += '<tr>'

                for(key in data[0]){
                    table+= `<td> ${dt[key]} </td>`;
                }
                table += '</tr>'
            }
        table += '</table>';
        const tableContainer = document.getElementById('table-container');
        tableContainer.innerHTML = table;        
}
</script>
</html>